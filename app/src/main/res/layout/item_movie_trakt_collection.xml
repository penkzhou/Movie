<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">


        <TextView
            android:id="@+id/collection_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="这是一条测试的评论" />


        <TextView
            android:id="@+id/collection_created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/collection_title"
            tools:text="12" />


        <TextView
            android:id="@+id/collection_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="8dp"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/collection_created_at"
            tools:text="这是一条测试的评论" />


        <TextView
            android:id="@+id/collection_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawablePadding="4dp"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/collection_description"
            app:layout_constraintTop_toBottomOf="@+id/collection_description"
            tools:text="12"
            app:drawableStartCompat="@drawable/ic_thumb_up" />


        <TextView
            android:id="@+id/collection_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_comment_24"
            android:drawablePadding="4dp"
            android:textAlignment="center"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/collection_like"
            app:layout_constraintTop_toBottomOf="@+id/collection_description"
            tools:text="12" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
